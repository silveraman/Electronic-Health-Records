
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i>All patients</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Patient Info</h2>
            <span class="text-light">Use the below form to Update a patient's account</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="name" value="<%= user.name %>" placeholder="Firstname Lastname">
        </div>

        <div class="form-group">
            <label for="DOB" class="text-light">DOB</label>
            <input type="date" name="DOB" value="<%= user.DOB%>" placeholder="DD MM YY">
        </div>

        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="<%= user.email%>" placeholder="example@gmail.com">
        </div>
        
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" <%= user.gender == 'Male' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female"  <%= user.gender == 'Female' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="gender" value="Others" <%= user.gender == 'Others' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Others</label>
            </div>
        </div>

        <!-- <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" <%= user.status == 'Active' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" <%= user.status == 'Inactive' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div> -->

        <div class="form-group">
            <label for="Permanent Address" class="text-light">Address</label>
            <input type="text" name="Address" value="<%= user.Address%>" placeholder="example@gmail.com" placeholder="House no. Locality City State">
        </div>
        
        <div class="form-group">
            <label for="Contact number" class="text-light">Contact number</label>
            <input type="tel" name="Contact_number" value="<%= user.Contact_number%>" placeholder="example@gmail.com" placeholder="XXXXXXXXXX">
        </div>

        <div class="form-group">
            <label for="Occupation" class="text-light">Occupation</label>
            <input type="text" name="Occupation" value="<%= user.Occupation%>" placeholder="example@gmail.com" placeholder="Occupation">
        </div>
    </div>

    <div class="new_user">
        <div class="form-group">
            <label for="Blood Group" class="text-light">Blood Group</label>
            <select name="Bloodgroup" value="" placeholder="select">
                <option>A+</option>
                <option>A-</option>
                <option>B+</option>
                <option>B-</option>
                <option>O+</option>
                <option>O-</option>
                <option>AB+</option>
                <option>AB-</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Insurance" class="text-light">Insurance</label>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="Insurance" value="Yes" <%= user.Insurance == 'Yes' ? 'checked' : '' %>>
                <label for="radio-5" class="radio-label">Yes</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="Insurance" value="No" <%= user.Insurance == 'No' ? 'checked' : '' %>>
                <label for="radio-6" class="radio-label">No</label>
            </div>
        </div>
    
        <div class="form-group">
            <label for="Bloodsugar" class="text-light">Blood Sugar</label>
            <div class="radio inline">
                <input type="radio" id="radio-7" name="Bloodsugar" value="Normal" <%= user.Bloodsugar == 'Normal' ? 'checked' : '' %>>
                <label for="radio-7" class="radio-label">Normal</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-8" name="Bloodsugar" value="Low" <%= user.Bloodsugar == 'Low' ? 'checked' : '' %>>
                <label for="radio-8" class="radio-label">Low</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-9" name="Bloodsugar" value="High" <%= user.Bloodsugar == 'High' ? 'checked' : '' %>>
                <label for="radio-9" class="radio-label">High</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-10" name="Bloodsugar" value="High-Low" <%= user.Bloodsugar == 'High-Low' ? 'checked' : '' %>>
                <label for="radio-10" class="radio-label">Fluctuating</label>
            </div>
        </div>
    
        <div class="form-group">
            <label for="Hypertension" class="text-light">Hypertension</label>
            <div class="radio inline">
                <input type="radio" id="radio-11" name="Hypertension" value="Normal" <%= user.Hypertension == 'Normal' ? 'checked' : '' %>>
                <label for="radio-11" class="radio-label">Normal</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-12" name="Hypertension" value="Low" <%= user.Hypertension == 'Low' ? 'checked' : '' %>>
                <label for="radio-12" class="radio-label">Low</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-13" name="Hypertension" value="High" <%= user.Hypertension == 'High' ? 'checked' : '' %>>
                <label for="radio-13" class="radio-label">High</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-14" name="Hypertension" value="High-Low" <%= user.Hypertension == 'High-Low' ? 'checked' : '' %>>
                <label for="radio-14" class="radio-label">Fluctuating</label>
            </div>
        </div>
    
        <div class="form-group">
            <label for="Allergy" class="text-light">Allergy</label>
            <div class="radio inline">
                <input type="radio" id="radio-15" name="Allergy" value="Yes" <%= user.Allergy == 'Yes' ? 'checked' : '' %>>
                <label for="radio-15" class="radio-label">Yes</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-16" name="Allergy" value="No" <%= user.Allergy == 'No' ? 'checked' : '' %>>
                <label for="radio-16" class="radio-label">No</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

