 <!-- form handling -->
 <form action="add_user" method="POST" id="add_user">

    <div class="new_user">
        <h1>General Information</h1>
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Firstname Lastname">
        </div>

        <div class="form-group">
            <label for="DOB" class="text-light">DOB</label>
            <input type="date" name="DOB" value="" placeholder="DD MM YY">
        </div>

        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" >
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="gender" value="Others" >
                <label for="radio-4" class="radio-label">Others</label>
            </div>
        </div>

        <!-- <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" >
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" >
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div> -->
    </div>
    <div class="new_user">
        <h1>Emergency Information</h1>
        <div class="form-group">
            <label for="Permanent Address" class="text-light">Address</label>
            <input type="text" name="Address" value="" placeholder="House no. Locality City State">
        </div>
        
        <div class="form-group">
            <label for="Contact number" class="text-light">Contact number</label>
            <input type="tel" name="Contact_number" value="" placeholder="XXXXXXXXXX">
        </div>

        <div class="form-group">
            <label for="Occupation" class="text-light">Occupation</label>
            <input type="text" name="Occupation" value="" placeholder="Occupation">
        </div>
    </div>

    <div class="new_user">
        <h1>Health Information</h1>
        <div class="form-group">
            <label for="Blood Group" class="text-light">Blood Group</label>
            <select name="Bloodgroup" value="" placeholder="select">
                <option>Select</option>
                <option>A+</option>
                <option>A-</option>
                <option>B+</option>
                <option>B-</option>
                <option>O+</option>
                <option>O-</option>
                <option>AB+</option>
                <option>AB-</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Bloodsugar" class="text-light">Blood Sugar</label>
            <div class="radio inline">
                <input type="radio" id="radio-7" name="Bloodsugar" value="Normal" >
                <label for="radio-7" class="radio-label">Normal</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-8" name="Bloodsugar" value="Low" >
                <label for="radio-8" class="radio-label">Low</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-9" name="Bloodsugar" value="High" >
                <label for="radio-9" class="radio-label">High</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-10" name="Bloodsugar" value="High-Low" >
                <label for="radio-10" class="radio-label">Flactuating</label>
            </div>
        </div>
        <div class="form-group">
            <label for="Hypertension" class="text-light">Hypertension</label>
            <div class="radio inline">
                <input type="radio" id="radio-11" name="Hypertension" value="Normal" >
                <label for="radio-11" class="radio-label">Normal</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-12" name="Hypertension" value="Low" >
                <label for="radio-12" class="radio-label">Low</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-13" name="Hypertension" value="High" >
                <label for="radio-13" class="radio-label">High</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-14" name="Hypertension" value="High-Low" >
                <label for="radio-14" class="radio-label">Flactuating</label>
            </div>
        </div>
    
        <div class="form-group">
            <label for="Allergy" class="text-light">Allergy</label>
            <div class="radio inline">
                <input type="radio" id="radio-15" name="Allergy" value="Yes" >
                <label for="radio-15" class="radio-label">Yes</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-16" name="Allergy" value="No" >
                <label for="radio-16" class="radio-label">No</label>
            </div>
        </div>
    </div>
    <div class="new_user">
        <h1>Insurance Information</h1>
        <div class="form-group">
            <label for="Insurance" class="text-light">Insurance</label>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="Insurance" value="Yes" >
                <label for="radio-5" class="radio-label">Yes</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="Insurance" value="No" >
                <label for="radio-6" class="radio-label">No</label>
            </div>
        </div>
    </div>
  

    <div class="form-group">
        <button type="submit" class="btn text-dark update">Save</button>
    </div>

</form>